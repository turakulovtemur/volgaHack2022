@model IEnumerable<volgaHack.ViewModels.EventViewModel>

<div class="container">
    <div class="row">
        <div hidden class="col">

        </div>
        <div hidden class="col order-5">

        </div>
        <div class="col order-1" style=" margin-top: 50px;">
            <a asp-action="Create" asp-controller="Event">Создать событие</a>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Название события</th>
                        <th scope="col">Описание</th>
                        <th scope="col">Дата события</th>
                        <th scope="col"> </th>
                        <th scope="col"> </th>
                    </tr>
                </thead>
                @if (@User.IsInRole("user"))
                {
                    <tbody>
                        @foreach (var app in Model)
                        {

                        <tr>

                            <td scope="row"></td>
                            <td>@app.Name</td>
                            <td>@app.Description</td>
                            <td>@app.EventDate</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Event" asp-route-id="@app.Id" class="btn btn-outline-info">Редактировать</a>
                            </td>

                            <td>

                                <form method="post" asp-action="Delete" asp-controller="Event" asp-route-id="@app.Id">
                                    <input type="submit" class="btn btn-outline-danger" value="Удалить" />
                                </form>
                            </td>

                        </tr>

                        }
                    </tbody>
                }



            </table>

        </div>
    </div>
</div>