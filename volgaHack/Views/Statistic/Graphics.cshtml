@model volgaHack.ViewModels.GraphicsDataResult

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div>
                <canvas id="myChart"></canvas>
                <input type="text" id="appId" hidden value="@Model.AppId">
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    function prepareGraphics(dataSetName,labels, graphicsValues, colors, borderColors) {
        const data = {
            labels: labels,
            datasets: [{
                label: `Статистика событий по приложению ${dataSetName}`,
                data: graphicsValues,
                backgroundColor: colors,
                borderColor: borderColors,
                borderWidth: 1
            }]
        };

        const config = {
            type: 'bar',
            data: data,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            },
        };

        const myChart = new Chart(
            document.getElementById('myChart'),
            config
        );
    }

    function buildGraphic() {
        var id = $('#appId').val();

        $.get(`/data?appId=${id}`, function (data) {
            var chartData = prepareData(data.chartData);

            prepareGraphics(data.appName, chartData.labels, chartData.data, chartData.colors, chartData.borderColor);
        }).fail(function (e) {
                console.log(e);
         });
    }

    function prepareData(data) {
        return {
            data: data.map((cur) => { return cur.data; }),
            colors: data.map((cur) => { return cur.color; }),
            labels: data.map((cur) => { return cur.label; }),
            borderColor: data.map((cur) => { return cur.borderColor; })
        }
    }

    $(document).ready(() => {
        buildGraphic();
    });

</script>